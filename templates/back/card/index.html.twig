{% extends 'base_back.html.twig' %}

{% block title %}Card index{% endblock %}

{% block body %}
<style>
    body {
        overflow-x: hidden;
    }
</style>
<div class="flex flex-col">
  <div class="sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Id</th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Title</th>
              {# <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">token</th> #}
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Type</th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">actions</th>
            </tr>
          </thead>
          <tbody>
          {% for card in cards %}
            <tr class="bg-gray-100 border-b">
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ card.id }}</td>
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ card.title }}</td>
              {# <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ card.token }}</td> #}
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ card.type }}</td>
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                <a href="{{ path('app_card_show', {'token': card.token}) }}" class="px-4 py-2 bg-blue-500 text-white rounded cursor-pointer">SHOW</a>
                <a href="{{ path('app_card_edit', {'token': card.token}) }}" class="px-4 py-2 bg-green-500 text-white rounded cursor-pointer">EDIT</a>
              </td>
            </tr>
          {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
        <a href="{{ path('app_card_new') }}" class="px-4 py-2 bg-blue-500 text-white rounded cursor-pointer inline-block mt-4">NEW</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}